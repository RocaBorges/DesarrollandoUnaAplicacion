<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.robertoborges.desarrollandounaaplicacion">

    <application
        android:allowBackup="true"
        android:icon="@drawable/usuario1"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".FormularioContacto"
            android:label="@string/Formulario_Contacto"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ConfirmacionDeDatos"
            android:label="@string/Confirmacion_Datos"
            android:screenOrientation="portrait"
            android:parentActivityName=".FormularioContacto">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".FormularioContacto"/>

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

        </activity>

    </application>

</manifest>